<!--<?xml version="1.0" encoding="utf-8"?>-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#FFDFEAF1">
    <TextView android:text="@string/title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40sp" />

    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/spotify_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spotify_streamer"
        android:onClick="showToastMessage"
        android:layout_marginTop="48dp"
        android:textSize="30sp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:background="#fff08c35"
        android:minHeight="75dp"
        android:minWidth="400dp" />

    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scores_button"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scores_app"
        android:onClick="showToastMessage"
        android:textSize="30sp"
        android:background="#fff08c35"
        android:layout_below="@+id/spotify_button"
        android:layout_centerHorizontal="true"
        android:minHeight="75dp"
        android:minWidth="400dp" />

    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/library_button"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/library_app"
        android:onClick="showToastMessage"
        android:textSize="30sp"
        android:layout_below="@+id/scores_button"
        android:layout_centerHorizontal="true"
        android:background="#fff08c35"
        android:minWidth="400dp"
        android:minHeight="75dp" />

    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/build_it_bigger_button"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/build_it_bigger"
        android:onClick="showToastMessage"
        android:textSize="30sp"
        android:layout_below="@+id/library_button"
        android:layout_centerHorizontal="true"
        android:background="#fff08c35"
        android:minWidth="400dp"
        android:minHeight="75dp" />

    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/xyz_reader_button"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/xyz_reader"
        android:onClick="showToastMessage"
        android:textSize="30sp"
        android:layout_below="@+id/build_it_bigger_button"
        android:layout_centerHorizontal="true"
        android:background="#fff08c35"
        android:minWidth="400dp"
        android:minHeight="75dp" />

    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/capstone_button"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/capstone_my_own_app"
        android:onClick="showToastMessage"
        android:textSize="30sp"
        android:layout_below="@+id/xyz_reader_button"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_centerHorizontal="true"
        android:background="#fff44336"
        android:minWidth="400dp"
        android:minHeight="75dp"
        android:textColor="#ffffffff" />
</RelativeLayout>

